# QIE Sentinel Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== BLOCKCHAIN CONFIGURATION =====
# RPC endpoint (local node, Infura, Alchemy, etc.)
RPC_URL=http://localhost:8545

# Private key for backend wallet (NEVER commit real keys!)
PRIVATE_KEY=your_private_key_here

# Network ID
CHAIN_ID=1

# ===== CONTRACT ADDRESSES =====
# Will be populated after deployment
VAULT_ADDRESS=
EXECUTOR_ADDRESS=

# ===== ORACLE CONFIGURATION =====
# Chainlink or other price feed addresses
ORACLE_ADDRESS=

# ===== API KEYS =====
# For price data sources
COINGECKO_API_KEY=
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Block explorer API (for contract verification)
ETHERSCAN_API_KEY=

# ===== BACKEND CONFIGURATION =====
# Polling interval in milliseconds
POLLING_INTERVAL=5000

# Backend server port (if adding API)
PORT=3000

# ===== AI ENGINE CONFIGURATION =====
# Model path
MODEL_PATH=./models/trading_model.h5

# Trading parameters
MAX_TRADE_SIZE=1.0
MIN_CONFIDENCE=0.7

# ===== SECURITY =====
# Enable/disable automatic trading
AUTO_TRADING_ENABLED=false

# Maximum daily loss limit (in USD)
MAX_DAILY_LOSS=100

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=./logs/qie-sentinel.log

# ===== OPTIONAL =====
# Discord webhook for notifications
DISCORD_WEBHOOK=

# Telegram bot for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
